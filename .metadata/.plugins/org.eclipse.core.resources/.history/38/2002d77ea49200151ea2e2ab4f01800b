package Yatzy;

import java.io.ByteArrayInputStream;

public class Controller {
	public Model model;
	public View view;
	
	public Controller (){
		this.model = new Model();
		this.view = new View();
		
		Start(this.model, this.view);
	}
	
	public void Start(Model model, View view){
		view.GetStartMenu();
		ByteArrayInputStream choice = view.InputStartMenu();
		view.MenuChoice(choice);
		
		switch(choice){
			case 1:
			case 2:
			case 3:
			default:
		}
	}
}
